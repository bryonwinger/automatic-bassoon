<p id="notice"><%= notice %></p>

<h3><%= @user.username %></h3>

<p>
  <strong>Joined:</strong>
  <%= @user.created_at.strftime("%d/%m/%Y") %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <%= link_to 'Favorite Circuits', favorite_circuits_user_path(@user) %>:
  <% if @user.favorite_circuits.empty? %>
    <em>No favorites</em>
  <% else %>
    <%= @user.favorite_circuits.length %>
  <% end %>
</p>

<p>
  <%= link_to 'Submitted Circuits', circuits_user_path(@user) %>:
  <% if @user.circuits.empty? %>
    <em>No submissions</em>
  <% else %>
    <%= @user.circuits.length %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %>
<br>
<%= link_to 'Back', users_path %>
